<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DashBoardActivity"

    tools:showIn="@layout/home_recyclerview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_title_recycler_best_seller"
        android:paddingTop="5dp"
        android:background="@color/home_title_tab"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/home_tv_best_seller_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Seller"
            android:gravity="center_horizontal"
            android:textColor="@color/home_tittle"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_title_recycler_best_seller"
        android:id="@+id/rel_recyl_home_tv_bst_seller"
        android:background="@drawable/rectable">
    <android.support.v7.widget.RecyclerView
    android:id="@+id/home_recycler_view_best_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:layout_weight="1"
        android:scrollbars="vertical" />
<RelativeLayout
    android:id="@+id/home_recycler_best_view_more"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/img_border"
android:layout_below="@+id/home_recycler_view_best_seller">
<TextView
    android:id="@+id/home_tv_best_seller_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View More"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/blue"
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/home_tv_best_seller_more_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" &#xf0a9;"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/red"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:padding="4dp"

        android:layout_toRightOf="@+id/home_tv_best_seller_more"
        />
</RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>